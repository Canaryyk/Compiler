    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug compiler_app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/compiler_app.exe",
            "args": [
                "examples/simple_program.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build compiler",
            "miDebuggerPath": "gdb"
        }
    ]
}